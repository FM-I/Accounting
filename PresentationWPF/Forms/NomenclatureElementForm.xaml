<Window x:Class="PresentationWPF.Forms.NomenclatureElementForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationWPF.Forms"
        mc:Ignorable="d"
                Title="Номенклатура" Height="280" Width="400"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73"/>
            <ColumnDefinition Width="319"/>
        </Grid.ColumnDefinitions>
        <TextBox  HorizontalAlignment="Left" Height="30" Margin="65,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" VerticalContentAlignment="Center" FontSize="16" Grid.Column="1"
Text="{Binding Code}" IsReadOnly="True"/>
        <Label Content="Код" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="42" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Content="Найменування" FontSize="16" HorizontalAlignment="Left" Height="40" Margin="10,44,0,0" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2"/>
        <TextBox Text="{Binding NameData, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="30" Margin="65,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" VerticalContentAlignment="Center" FontSize="16" Grid.Column="1"/>
        <Label Content="Ариткул" FontSize="16" HorizontalAlignment="Left" Height="40" Margin="10,82,0,0" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2"/>
        <TextBox Text="{Binding Article, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="30" Margin="65,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" VerticalContentAlignment="Center" FontSize="16" Grid.Column="1"/>
        <Button Content="Записати" HorizontalAlignment="Left" Height="32" Margin="188,206,0,0" VerticalAlignment="Top" Width="118" Grid.Column="1" Click="Button_Click"/>

        <Label Content="Од. виміру" FontSize="16" HorizontalAlignment="Left" Height="40" Margin="10,119,0,0" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2"/>
        <TextBox Text="{Binding UnitName, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" HorizontalAlignment="Left" Height="30" Margin="65,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" VerticalContentAlignment="Center" FontSize="16" Grid.Column="1"/>
        <Button x:Name="btnOpen" Click="btnOpen_Click" Grid.Column="1" Content=". . ." HorizontalAlignment="Left" Margin="277,124,0,0" VerticalAlignment="Top" Height="30" Width="29" Background="Transparent" BorderThickness="0 .5 .5 .5"  />
        <Button x:Name="btnShowList" Click="btnShowList_Click" Grid.Column="1" Content="▼" HorizontalAlignment="Left" Margin="248,124,0,0" VerticalAlignment="Top" Height="30" Width="29" Background="Transparent" BorderThickness="0 .5 .5 .5"/>
        
        <Label Content="В групі" FontSize="16" HorizontalAlignment="Left" Height="40" Margin="10,156,0,0" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2"/>
        <TextBox Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" HorizontalAlignment="Left" Height="30" Margin="65,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" VerticalContentAlignment="Center" FontSize="16" Grid.Column="1"/>
        <Button x:Name="btnOpenGroup" Click="btnOpenGroup_Click" Grid.Column="1" Content=". . ." HorizontalAlignment="Left" Margin="277,161,0,0" VerticalAlignment="Top" Height="30" Width="29" Background="Transparent" BorderThickness="0 .5 .5 .5"  />
        <Button x:Name="btnShowListGroup" Click="btnShowListGroup_Click" Grid.Column="1" Content="▼" HorizontalAlignment="Left" Margin="248,161,0,0" VerticalAlignment="Top" Height="30" Width="29" Background="Transparent" BorderThickness="0 .5 .5 .5"/>

    </Grid>
</Window>

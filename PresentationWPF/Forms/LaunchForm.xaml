<Window x:Class="PresentationWPF.Forms.LaunchForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationWPF.Forms"
        mc:Ignorable="d"
        Title="LaunchForm" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        WindowStyle="None">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <Image Name="Logo" Margin="10" HorizontalAlignment="Left" Width="200"/>
        <Grid Grid.Row="1" Background="AliceBlue">
            <Label Content="Облік  'ПРОСТО'" FontSize="28" FontWeight="Bold" HorizontalAlignment="Right" Margin="0 0 15 0" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</Window>
